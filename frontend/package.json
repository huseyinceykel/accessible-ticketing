{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx",

    "test": "jest --passWithNoTests",
    "test:unit": "jest __tests__/unit",
    "test:accessibility": "jest __tests__/accessibility",
    "test:pact": "jest __tests__/pact --runInBand --passWithNoTests",

    "test:pa11y": "pa11y http://localhost:3000 --reporter html > wcag-report.html",

    "test:all": "npm run test && npm run test:pact && npm run test:accessibility && npm run test:pa11y"
  },
  "dependencies": {
    "next": "16.0.5",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^16.0.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.5",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "pa11y": "^9.0.1",
    "pa11y-reporter-html": "^2.0.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  }
}
