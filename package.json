{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx --max-warnings=0",
    "test": "jest --passWithNoTests",

    "test:unit": "jest __tests__/unit",
    "test:accessibility": "jest __tests__/accessibility",
    "test:pact": "jest __tests__/pact --runInBand --passWithNoTests",

    "test:all": "npm run test && npm run test:pact && npm run test:accessibility",

    "wcag": "node pa11y-runner.js"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^16.0.2",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",

    "@types/node": "^20.11.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",

    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",

    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",

    "pa11y": "^9.0.1",
    "pa11y-reporter-html": "^2.0.0",

    "typescript": "^5.4.0"
  }
}
